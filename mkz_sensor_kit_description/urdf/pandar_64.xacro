<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- Macro to instantiate a Hesai Pandar64 LiDAR.
       Called like:
         <xacro:pandar64 parent="sensor_kit_base_link" name="hesai_lidar" topic="/pandar_points" hz="10" gpu="false">
           <origin xyz="..." rpy="..."/>
         </xacro:pandar64>
  -->
  <xacro:macro name="pandar64" params="parent name topic hz gpu *origin">
    <!-- Directly mount the LiDAR frame to the parent using caller's <origin/> -->
    <joint name="${name}_mount_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="${name}"/>
      <xacro:insert_block name="origin"/>
    </joint>

    <!-- The LiDAR frame used by your driver and TF.
         All visuals that were previously on ${name}_base_link are now here,
         so there is no intermediate ${name}_base_link frame. -->
    <link name="${name}">
      <!-- A simple stacked-cylinder visual to represent the sensor body -->
      <visual>
        <geometry>
          <cylinder length="0.030" radius="0.065"/>
        </geometry>
        <origin xyz="0 0 0.015" rpy="0 0 0"/>
        <material name="dark_gray">
          <color rgba="0.3 0.3 0.3 1.0"/>
        </material>
      </visual>

      <visual>
        <geometry>
          <cylinder length="0.060" radius="0.065"/>
        </geometry>
        <origin xyz="0 0 0.060" rpy="0 0 0"/>
        <material name="blue">
          <color rgba="0.0 0.2 1.0 1.0"/>
        </material>
      </visual>

      <visual>
        <geometry>
          <cylinder length="0.050" radius="0.065"/>
        </geometry>
        <origin xyz="0 0 0.115" rpy="0 0 0"/>
        <material name="light_gray">
          <color rgba="0.8 0.8 0.8 1.0"/>
        </material>
      </visual>

      <inertial>
        <mass value="0.0"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
      </inertial>
    </link>
  </xacro:macro>
</robot>
